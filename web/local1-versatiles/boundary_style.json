{
  "version": 8,
  "name": "local-boundary-style",
  "sources": {
    "mbtiles-boundaries": {
      "type": "vector",
      "tiles": [ "http://localhost:8080/data/india-latest/{z}/{x}/{y}.pbf" ],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f9f4ee" }
    },
    {
      "id": "boundary-country-outline",
      "type": "line",
      "source": "mbtiles-boundaries",
      "source-layer": "boundaries",
      "filter": [ "all", [ "==", "admin_level", 2 ], [ "!", "maritime" ] ],
      "paint": {
        "line-color": "#a6a6c8",
        "line-width": { "stops": [ [2, 0], [3, 1], [10, 4] ] }
      }
    },
    {
      "id": "boundary-state-outline",
      "type": "line",
      "source": "mbtiles-boundaries",
      "source-layer": "boundaries",
      "filter": [ "all", [ "==", "admin_level", 4 ] ],
      "paint": {
        "line-color": "#a6a6c8",
        "line-width": { "stops": [ [7, 0], [8, 1], [10, 2] ] }
      }
    },
    {
      "id": "label-boundary-country",
      "type": "symbol",
      "source": "mbtiles-boundaries",
      "source-layer": "boundary_labels",
      "filter": [ "in", "admin_level", 2, "2" ],
      "layout": {
        "text-field": "{name}",
        "text-font": [ "Open Sans Regular" ],
        "text-size": { "stops": [ [2, 10], [6, 14] ] }
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "rgba(255,255,255,0.8)",
        "text-halo-width": 1
      }
    }
  ]
}
